                                Style="{StaticResource CaptionButtonStyle}"
                                Padding="0"
                                >
                                <Path Data="F1M0,0L2,0 5,3 8,0 10,0 6,4 10,8 8,8 5,5 2,8 0,8 4,4 0,0z"
                                  SnapsToDevicePixels="True"
                                  Fill="{DynamicResource MainTextColor}" />
                            </Button>
