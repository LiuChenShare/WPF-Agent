            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid Name="WindowBorder" Margin="10">
                        <Rectangle  Fill="{TemplateBinding Background}">
                            <Rectangle.Effect>
                                <DropShadowEffect BlurRadius="{Binding DMShadowSize}" ShadowDepth="0" Color="{Binding DMShadowColor}"/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Border 
                            Panel.ZIndex="0"
                            Name="MyBorder"
                            BorderBrush="{TemplateBinding BorderBrush}"  
                            BorderThickness="{TemplateBinding BorderThickness}"  
                            Padding="{TemplateBinding Margin}"  
