                        </Border>
                        <StackPanel Height="{Binding DMTitleSize}" Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right">
                            <Button x:Name="PART_Min"
                                Focusable="False"
                                Visibility="{Binding BtnMinVisibility}"    
                                Style="{DynamicResource CaptionButtonStyle}"
                                Padding="0"
                                >
                                <Path Data="F1M0,6L0,9 9,9 9,6 0,6z"
                                  SnapsToDevicePixels="True"
                                  Fill="{DynamicResource MainTextColor}" />
                            </Button>

                            <Grid>
                                <Button x:Name="PART_Max"
                            Visibility="{Binding BtnMaxVisibility}"
                                Focusable="False"
                                Style="{StaticResource CaptionButtonStyle}"
                                Padding="0"
                                >
